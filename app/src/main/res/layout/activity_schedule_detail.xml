<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.brightcove.tvmazeclient.utils.StringUtil"/>
        <variable
            name="scheduleDetailViewModel"
            type="com.brightcove.tvmazeclient.viewModel.ScheduleDetailViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/detail_layout_start_margin"
            android:layout_marginLeft="@dimen/list_item_title_left_margin"
            android:layout_marginEnd="@dimen/detail_layout_end_margin"
            android:layout_marginRight="@dimen/list_item_title_right_margin">
            <TextView
                android:id="@+id/tv_show_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:text="@{scheduleDetailViewModel.getSchedule.show.name}"/>
            <TextView
                android:id="@+id/tv_schedule_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@{scheduleDetailViewModel.getSchedule.name}"/>
            <TextView
                android:id="@+id/tv_show_season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                />
            <TextView
                android:id="@+id/tv_show_episode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Caption"
                />
            <TextView
                android:id="@+id/tv_show_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{StringUtil.toHTMLFormat(scheduleDetailViewModel.getSchedule.summary)}"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageUrl="@{scheduleDetailViewModel.getShowImage}"/>
        </LinearLayout>
    </ScrollView>

</layout>